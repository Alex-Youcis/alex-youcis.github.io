  <!-- JavaScript for Mobile Menu Toggle + Filters -->
  <script>
    function toggleMenu() {
      var navbar = document.getElementById("myNavbar");
      navbar.classList.toggle("responsive");
    }

    // Simple filter logic: uses data-status on each card
    (function(){
      const btns = document.querySelectorAll('.filter-btn');
      const cards = document.querySelectorAll('.publication-card');

      function apply(filter){
        cards.forEach(card => {
          const status = card.getAttribute('data-status'); // "published" or "preprint"
          if(!filter){ card.style.display = ''; return; }
          card.style.display = (status === filter) ? '' : 'none';
        });
      }

      btns.forEach(btn=>{
        btn.addEventListener('click', ()=>{
          const isActive = btn.classList.contains('active');
          btns.forEach(b=>b.classList.remove('active'));
          if(isActive){ apply(null); return; }
          btn.classList.add('active');
          apply(btn.dataset.filter);
        });
      });
    })();
  </script>
