  <!-- JS -->
  <script>
    function toggleMenu(){
      const nav = document.getElementById('myNavbar');
      nav.classList.toggle('responsive');
      const btn = nav.querySelector('.nav-mobile .icon');
      const expanded = nav.classList.contains('responsive');
      if(btn) btn.setAttribute('aria-expanded', expanded ? 'true' : 'false');
    }

    // Filter button: compact -> full-width layered header
    (function(){
      const card = document.getElementById('filters-card');
      const btn  = document.getElementById('filters-toggle');
      const inner= document.getElementById('filters-inner');
      btn.addEventListener('click', ()=>{
        const willOpen = !card.classList.contains('open');
        card.classList.toggle('open', willOpen);
        inner.classList.toggle('hidden', !willOpen);
        btn.setAttribute('aria-expanded', willOpen ? 'true' : 'false');
        inner.setAttribute('aria-hidden', willOpen ? 'false' : 'true');
      });
    })();

    // Unified filtering across both grids
    (function(){
      const q = document.getElementById('q');
      const typeChips = Array.from(document.querySelectorAll('.chip[data-type]'));
      const tagChips  = Array.from(document.querySelectorAll('.chip[data-tag]'));
      const cards = Array.from(document.querySelectorAll('.publication-card'));

      let activeType = 'all';
      const activeTags = new Set();
      const norm = s => (s||'').toLowerCase();

      function tagHit(cardTags){
        if(activeTags.size===0) return true;
        const tags = norm(cardTags||'').split(',').map(s=>s.trim());
        for(const t of activeTags){ if(!tags.some(x=>x.includes(t))) return false; }
        return true;
      }
      function matches(card){
        if(activeType!=='all' && (card.dataset.type!==activeType)) return false;
        if(!tagHit(card.dataset.tags)) return false;
        const query = norm(q?.value);
        if(!query) return true;
        const hay = [card.dataset.title, card.dataset.tags].map(norm).join(' ');
        return hay.includes(query);
      }
      function render(){
        cards.forEach(c => { c.style.display = matches(c) ? '' : 'none'; });
      }

      typeChips.forEach(chip=>{
        chip.addEventListener('click', ()=>{
          typeChips.forEach(c=>c.setAttribute('aria-pressed','false'));
          chip.setAttribute('aria-pressed','true');
          activeType = chip.dataset.type;
          render();
        });
      });
      tagChips.forEach(chip=>{
        chip.addEventListener('click', ()=>{
          const t = chip.dataset.tag;
          const on = chip.getAttribute('aria-pressed')==='true';
          chip.setAttribute('aria-pressed', on ? 'false' : 'true');
          if(on) activeTags.delete(t); else activeTags.add(t);
          render();
        });
      });
      if(q){ q.addEventListener('input', render); }
      window.addEventListener('load', render, {once:true});
    })();

    // Most recent blog post (same approach you had)
    (function() {
      const rssUrl = 'https://ayoucis.wordpress.com/feed';
      const proxyUrl = 'https://api.rss2json.com/v1/api.json?rss_url=' + encodeURIComponent(rssUrl);

      fetch(proxyUrl)
        .then(response => response.json())
        .then(data => {
          if(data.status === 'ok') {
            const post = data.items[0];
            const title = post.title;
            const link = post.link;
            const content = post.content;

            const tempDiv = document.createElement('div');
            tempDiv.innerHTML = content;
            const firstParagraph = tempDiv.querySelector('p');
            const description = firstParagraph ? firstParagraph.innerText : '';

            const postHtml = `
              <h3><a href="${link}" target="_blank" rel="noopener">${title}</a></h3>
              <p>${description}</p>
            `;
            document.getElementById('most-recent-post').innerHTML = postHtml;
          } else {
            document.getElementById('most-recent-post').innerHTML = 'Unable to load the most recent post.';
          }
        })
        .catch(error => {
          console.error('Error fetching the RSS feed:', error);
          document.getElementById('most-recent-post').innerHTML = 'Unable to load the most recent post.';
        });
    })();
  </script>
</body>
